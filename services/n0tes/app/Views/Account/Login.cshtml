@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, App
@using App.ViewModels
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model App.ViewModels.LoginModel

<div class="col-xs-12 col-md-8 col-xl-4 offset-md-2 offset-xl-4 text-center mb-3">
    <form autocomplete="off" asp-route="Login">
        <input type="hidden" asp-for="ReturnUrl"/>
        <div class="card">
            <input type="text" class="form-control form-control-lg" placeholder="User" asp-for="Username"
                   has-errors="@(ViewData.ModelState.GetValidationState(nameof(LoginModel.Username)) == ModelValidationState.Invalid)"
                   autofocus="@(Model?.Username == null)">
            <span asp-validation-for="Username" class="invalid-feedback"></span>

            <input type="password" class="form-control form-control-lg form-control-last" placeholder="Password" asp-for="Password"
                   has-errors="@(ViewData.ModelState.GetValidationState(nameof(LoginModel.Password)) == ModelValidationState.Invalid)"
                   autofocus="@(Model?.Username != null)">
            <span asp-validation-for="Password" class="invalid-feedback"></span>
        </div>
        <p>
            <button type="submit" class="btn btn-dark btn-block mt-3">Login</button>
        </p>
    </form>
</div>